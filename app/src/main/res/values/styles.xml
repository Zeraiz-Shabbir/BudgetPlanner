<!-- res/values/styles.xml -->
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Set the default style for all buttons -->
        <item name="buttonStyle">@style/RoundButtonStyle</item>
    </style>

    <!-- Button Style with Round Edges -->
    <style name="RoundButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/round_button_background</item>
        <!-- Add other button styles if needed -->
    </style>

</resources>
