<!-- res/values/styles.xml -->
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#03A9F4</item>

        <!-- Set the default style for all buttons -->
        <item name="buttonStyle">@style/RoundButtonStyle</item>
    </style>

    <!-- Button Style with Round Edges -->
    <style name="RoundButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/round_button_background</item>
        <!-- Add other button styles if needed -->
    </style>

    <!-- Progress Bar Style for Set Limit -->
    <style name="SetLimitBar">
        <item name="colorAccent">@color/orange</item>
    </style>

    <!-- Progress Bar Style for Saving Limit -->
    <style name="SavingLimitBar">
        <item name="colorAccent">@color/green</item>
    </style>

    <color name="orange">#FF9800</color>
    <color name="green">#8BC34A</color>
</resources>
